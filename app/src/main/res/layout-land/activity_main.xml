<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.azore.compustore.MainActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageButton
        android:id="@+id/btnCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@android:string/untitled"
        android:onClick="BtnCategorias"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnReportes"
        app:layout_constraintTop_toTopOf="@+id/btnReportes"
        app:srcCompat="@drawable/ic_storage" />

    <ImageButton
        android:id="@+id/btnProductos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:adjustViewBounds="false"
        android:background="@android:color/transparent"
        android:contentDescription="@android:string/untitled"
        android:cropToPadding="false"
        android:onClick="BtnEnsambles"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintLeft_toRightOf="@+id/btnReportes"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_widgets" />

    <ImageButton
        android:id="@+id/btnOrdenes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@android:color/transparent"
        android:contentDescription="@android:string/untitled"
        android:onClick="BtnOrdenes"
        app:layout_constraintLeft_toRightOf="@+id/btnEnsambles"
        app:layout_constraintRight_toLeftOf="@+id/btnClientes"
        app:layout_constraintRight_toRightOf="@+id/btnReportes"
        app:layout_constraintTop_toTopOf="@+id/btnClientes"
        app:srcCompat="@drawable/ic_local_grocery_store" />

    <ImageButton
        android:id="@+id/btnClientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@android:color/transparent"
        android:contentDescription="@android:string/untitled"
        android:onClick="BtnReportes"
        app:layout_constraintLeft_toRightOf="@+id/btnOrdenes"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:srcCompat="@drawable/ic_thumbs_up_down" />

    <ImageButton
        android:id="@+id/btnReportes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@android:string/untitled"
        android:onClick="BtnProductos"
        app:layout_constraintLeft_toRightOf="@+id/btnCategory"
        app:layout_constraintRight_toLeftOf="@+id/btnProductos"
        app:layout_constraintTop_toTopOf="@+id/btnProductos"
        app:srcCompat="@drawable/ic_laptop_chromebook" />

    <ImageButton
        android:id="@+id/btnEnsambles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@android:string/untitled"
        android:onClick="BtnClientes"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnOrdenes"
        app:layout_constraintTop_toTopOf="@+id/btnOrdenes"
        app:srcCompat="@drawable/ic_supervisor_account" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteY="180dp"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>
